---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/Header.astro';
import { Card, CardHeader, CardTitle } from '@/components/ui/card';

const allProjects = await Astro.glob('./*.mdx');
const projects = allProjects
  .map((project) => {
    const url = project.url;
    const slug = url.split('/').pop()?.replace('.html', '').replace(/\/$/, '') || '';
    return {
      title: project.frontmatter.title,
      date: project.frontmatter.date,
      slug,
    };
  })
  .sort((a, b) => new Date(b.date).getTime() - new Date(a.date).getTime());
---

<BaseLayout title="Projects - Carlos Gutierrez">
  <div class="min-h-screen bg-background">
    <Header />
    
    <main class="max-w-3xl mx-auto px-6 pt-32 pb-16">
      <h1 class="text-4xl font-bold text-primary mb-8">Projects</h1>
      
      <div class="space-y-4">
        {projects.map((project) => (
          <a href={`/projects/${project.slug}`} class="block">
            <Card className="cursor-pointer transition-all duration-200 hover:bg-card/80 hover:scale-[1.02]">
              <CardHeader>
                <div class="flex justify-between items-start">
                  <CardTitle className="text-xl">{project.title}</CardTitle>
                  <span class="text-sm text-muted-foreground">{project.date}</span>
                </div>
              </CardHeader>
            </Card>
          </a>
        ))}
      </div>
    </main>
  </div>
</BaseLayout>

