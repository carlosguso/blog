---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/Header.astro';
import { Card, CardHeader, CardTitle } from '@/components/ui/card';

const projects = [
  { title: "Portfolio Website", date: "2024-03-10", slug: "portfolio-website" },
  { title: "E-commerce Platform", date: "2024-02-15", slug: "ecommerce-platform" },
  { title: "Task Management App", date: "2024-01-05", slug: "task-management-app" },
];
---

<BaseLayout title="Projects - Carlos Gutierrez">
  <div class="min-h-screen bg-background">
    <Header />
    
    <main class="max-w-3xl mx-auto px-6 pt-32 pb-16">
      <h1 class="text-4xl font-bold text-primary mb-8">Projects</h1>
      
      <div class="space-y-4">
        {projects.map((project) => (
          <a href={`/projects/${project.slug}`} class="block">
            <Card className="cursor-pointer transition-all duration-200 hover:bg-card/80 hover:scale-[1.02]">
              <CardHeader>
                <div class="flex justify-between items-start">
                  <CardTitle className="text-xl">{project.title}</CardTitle>
                  <span class="text-sm text-muted-foreground">{project.date}</span>
                </div>
              </CardHeader>
            </Card>
          </a>
        ))}
      </div>
    </main>
  </div>
</BaseLayout>

