---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/Header.astro';
import { Card, CardHeader, CardTitle } from '@/components/ui/card';
import { processMDXFiles } from '@/lib/utils';

const allPosts = await Astro.glob('./*.mdx');
const blogPosts = processMDXFiles(allPosts);
---

<BaseLayout title="Blog - Carlos Gutierrez">
  <div class="min-h-screen bg-background">
    <Header />
    
    <main class="max-w-3xl mx-auto px-6 pt-32 pb-16">
      <h1 class="text-4xl font-bold text-primary mb-8">Blog</h1>
      
      <div class="space-y-4">
        {blogPosts.map((post) => (
          <a href={`/blog/${post.slug}`} class="block">
            <Card className="cursor-pointer transition-all duration-200 hover:bg-card/80 hover:scale-[1.02]">
              <CardHeader>
                <div class="flex justify-between items-start">
                  <CardTitle className="text-xl">{post.title}</CardTitle>
                  <span class="text-sm text-muted-foreground">{post.date}</span>
                </div>
              </CardHeader>
            </Card>
          </a>
        ))}
      </div>
    </main>
  </div>
</BaseLayout>

